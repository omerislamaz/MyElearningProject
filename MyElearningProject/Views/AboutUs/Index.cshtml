@model MyElearningProject.Models.AboutUsandFetatured
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int say = 0;

}

<div class="row page-titles" style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">
    </div>
</div>


<div class="card" style="text-align: center">
    <h2><B>HAKKIMIZDA SAYFASI KONTROL ALANI</B></h2>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">

                    <tr>

                        <th><b>Başlık</b></th>
                        <th><b>Açıklama</b></th>
                        <th><b>Güncelle</b></th>
                        <th><b>Sitede Gör</b></th>
                    </tr>


                    @foreach (var x in Model.deger1)
                    {
                        <tr>
                            <td>@x.Title</td>
                            <td>@x.Comment</td>
                            <td><a href="/AboutUs/UpdateAboutUs/@x.AboutUsID" class="btn btn-outline-success">Güncelle</a></td>
                            <td><a href="/Home/Index/" class="btn btn-outline-info" target="_blank">Sitede Gör</a></td>
                        </tr>
                    }

                </table>


            </div>
        </div>
    </div>
</div>

@if (Model != null && Model.deger2.Any())
{
    <div class="alert alert-success" role="alert">
        <center>
            <b>
                Toplam <strong><b>@Model.deger2.Count()</b></strong> Özellik bulumaktadır.
            </b>
        </center>
    </div>
}
else
{
    <div class="alert alert-danger">
        Özellik Belirtilmemiştir !
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">

                    <tr>
                        <th><b>Sıra</b></th>
                        <th><b>Özellik Adı</b></th>
                        <th><b>Sil</b></th>
                        <th><b>Güncelle</b></th>
                    </tr>

                    @foreach (var item in Model.deger2)
                    {
                        say++;
                        <tr>
                            <td>@say</td>
                            <td>@item.FeaturedName</td>
                            <td><a href="/AboutUs/DeleteFeature/@item.FeaturedID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/AboutUs/UpdateFeature/@item.FeaturedID" class="btn btn-outline-success">Güncelle</a>  </td>
                        </tr>
                    }

                </table>
                <a href="/AboutUs/AddFeature/" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
                <br /><br />
            </div>
        </div>
    </div>
</div>