@model MyElearningProject.DAL.Entities.Instructor
@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row page-titles"  style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">
    </div>
</div>

<div class="card" style="text-align: center">
    <h2><B>EĞİTMEN GÜNCELLEME SAYFASI</B></h2>
</div>


<form method="post">

    <input type="hidden" name="InstructorID" value="@Model.InstructorID" />

    <label><b>Eğitmen Adı</b></label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <br /><br />

    <label><b>Eğitmen Soyadı</b></label>
    <input type="text" name="Surname" class="form-control" value="@Model.Surname" />

    <br /><br />

    <label><b>Eğitmen Görseli</b></label>
    <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl" />

    <br /><br />
    <button class="btn btn-primary">Eğitmeni Güncelle</button>
    <br /><br />
    <a href="/Instructor/Index/" class="btn btn-outline-info"> << Eğitmen Sayfasına Geri Dön</a>


</form>
