@model List<MyElearningProject.DAL.Entities.Galery>
@{
    ViewBag.Title = "AdminHomeGaleryIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int say = 0;
}
<link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

<div class="row page-titles"  style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">

    </div>
</div>

<div class="card" style="text-align: center">
    <h2><B>GALERİ LİSTESİ</B></h2>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-success" role="alert">
        <b>
            Toplam <strong>@Model.Count()</strong> Resim bulumaktadır.
        </b>
    </div>
}
else
{
    <div class="alert alert-warning">
        Kayıtlı Resim Bulunmuyor!
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <div style="overflow:scroll">
                    <table class="table table-bordered">

                        <tr>
                            <th>Sıra</th>
                            <th>Resim Url</th>
                            <th>Resim Açıklama</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            say++;
                            <tr>
                                <td>@say</td>
                                <td>
                                    <div class="float-left">
                                        <div class="container">

                                            <div style="overflow-wrap:inherit">
                                                <img src="@item.ImageUrl" width="150" height="90">
                                            </div>
                                        </div>
                                    </div>
                                </td>

                                <td>@item.ImageName</td>
                                <td>@item.Date</td>
                                <td><a href="/Home/DeleteAdminHomeGaleryIndex/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Home/UpdateAdminHomeGaleryIndex/@item.ID" class="btn btn-outline-success">Güncelle</a>  </td>
                            </tr>
                        }

                    </table>
                </div>
                <br /><br />
                <a href="/Home/AddAdminHomeGaleryIndex/" class="btn btn-outline-primary">Yeni Resim Ekle</a>
            </div>
        </div>
    </div>
</div>