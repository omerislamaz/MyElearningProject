@model MyElearningProject.DAL.Entities.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row page-titles" style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">
    </div>
</div>



<div class="card" style="text-align: center">
    <h2><B>KATEGORİ GÜNCELLEME SAYFASI</B></h2>
</div>


<form method="post">

    @*<label>Kategori ID</label>*@
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control", Type = "hidden" })
    <br />

    <label><b>Kategori Adını Giriniz</b></label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br /><br />


    <label><b>Resim Yolu</b></label>
    @Html.TextAreaFor(x => x.ImageURl, new { @class = "form-control", rows = 3, colw = 3 })

    <br /><br />
    <button class="btn btn-primary">Kategoriyi Güncelle</button>
    <br /><br />
    <a href="/Category/Index/" class="btn btn-outline-info"> << Kategori Sayfasına Geri Dön</a>



</form>