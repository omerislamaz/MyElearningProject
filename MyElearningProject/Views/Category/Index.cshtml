@model List<MyElearningProject.DAL.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int say = 0;
}

<div class="row page-titles"  style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">

    </div>
</div>

<div class="card" style="text-align: center">
    <h2><B>KATEGORİ LİSTESİ</B></h2>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-success" role="alert">
        <b>
            Toplam <strong>@Model.Count()</strong> Kategori bulumaktadır.
        </b>
    </div>
}
else
{
    <div class="alert alert-warning">
        Kayıtlı Kategori Bulunmuyor!
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">

                    <tr>
                        <th>Sıra</th>
                        <th>Kategori Adı</th>
                        <th>ImageURl</th>
                        <th>Güncelle</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        say++;
                        <tr>
                            <td>@say</td>
                            <td>@item.CategoryName</td>
                            <td>@item.ImageURl</td>
                            <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a>  </td>
                        </tr>
                    }

                </table>
                <a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>

            </div>
        </div>
    </div>
</div>
