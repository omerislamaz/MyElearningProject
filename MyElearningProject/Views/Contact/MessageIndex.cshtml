@model List<MyElearningProject.DAL.Entities.Contact>
@{
    ViewBag.Title = "MessageIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int say = 0;
}

<div class="row page-titles"  style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">
    </div>
</div>

<div class="card" style="text-align: center">
    <h2><B>GELEN MESAJ LİSTESİ</B></h2>
</div>

@if (Model != null && Model.Any())
{
    <div class="alert alert-success" role="alert">
        <b>
            Toplam <strong>@Model.Count()</strong> Mesaj bulumaktadır.
        </b>
    </div>
}
else
{
    <div class="alert alert-danger">
        Kayıtlı Mesaj Bulunmuyor !
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <table class="table table-bordered">

                    <tr>
                        <th>Sıra</th>
                        <th>İsim Soyisim</th>
                        <th>Email</th>
                        <th>Konu</th>
                        <th>Mesaj</th>
                        <th>Sil</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        say++;
                        <tr>
                            <td>@say</td>
                            <td>@item.NameSurname</td>
                            <td>@item.Email</td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>
                            <td><a href="/Contact/DeleteMessage/@item.ID" class="btn btn-outline-danger">Sil</a>  </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
