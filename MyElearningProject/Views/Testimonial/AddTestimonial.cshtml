@model MyElearningProject.DAL.Entities.Testimonial
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles"  style="background-color:aliceblue">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">E-Learning Admin Paneli</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">@ViewBag.breadcrumb</li>
        </ol>
    </div>
    <div class="col-md-7 col-4 align-self-center">
    </div>
</div>




<div class="card" style="text-align: center">
    <h2><B>YENİ REFERANS KAYIT SAYFASI</B></h2>
</div>


<form method="post">


    <label><b>Referans Görsel</b></label>
    <input type="text" name="ImageUrl" class="form-control" />
    <br /><br />

    <label><b>Referans Durumu</b></label>
    <input type="text" name="Status" class="form-control" />
    <br /><br />

    <label><b>Referans Adı Soyadı</b></label>
    <input type="text" name="NameSurname" class="form-control" required />
    <FONT COLOR="red" size="1">*Zorunlu Alan</FONT>
    <br /><br />

    <label><b>Konu Başlık</b></label>
    <input type="text" name="Title" class="form-control" required />
    <FONT COLOR="red" size="1">*Zorunlu Alan</FONT>
    <br /><br />

    <label><b>Yorum</b></label>
    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control", rows = 5, cols = 50 })

    <br /><br />
    <button class="btn btn-primary">Referansı Kaydet</button>
    <br /><br />
    <a href="/Testimonial/Index/" class="btn btn-outline-info"> << Referans Sayfasına Geri Dön</a>


</form>
